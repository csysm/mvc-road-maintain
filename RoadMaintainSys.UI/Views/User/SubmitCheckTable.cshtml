@model RoadMaintainSys.UI.Models.TableCheckViewModel

@{
    ViewData["Title"] = "日常养护检查表提交";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

@section UserName{
    欢迎您:@ViewBag.UserName
}

<h1>日常养护检查表提交</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SubmitCheckTable">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
