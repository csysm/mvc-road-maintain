@model RoadMaintainSys.Entities.Admin

@{
    ViewData["Title"] = "管理员信息";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@section AdminName{
    欢迎您:@ViewBag.AdminName
}
<h1>管理员信息</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            当前账号:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            当前用户名:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            创建时间:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("更改个人信息", "EditAdmin")
    &emsp;
    <a asp-action="Index">返回首页</a>
</div>
